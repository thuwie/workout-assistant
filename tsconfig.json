{
  "compilerOptions": {
      "experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "target": "es2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "index.d.ts"
    ],
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    // "strictBindCallApply": true,
    "lib": [
      "es6"
    ]
  },
  "include": [
    "src/**/*"
  ]
}
